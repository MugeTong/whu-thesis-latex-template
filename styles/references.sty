% 本文件定义参考文献的格式以及自定义的引用命令
\ProvidesPackage{styles/references}[
    2025/03/12
    v0.1.0
    References format and custom citation commands.
]

%自定义新命令\upcite, 使参考文献引用以上标出现
\newcommand{\upcite}[1]{\textsuperscript{\cite{#1}}}

% 参考文献格式
% plain, unsrt, alpha, abbrv, chinesebst 等
\bibliographystyle{gbt7714-numerical}
\setlength{\bibsep}{0em} % 设置参考文献条目间的距离

% 创建引用命令
\def\makereferences{
    \clearpage
    \phantomsection
    \addcontentsline{toc}{chapter}{参考文献}
    \ifaddnocite
        \nocite{*}  % 显示所有写在文件中的文献
        \bibliography{includes/references}  % 参考文献文件
    \else
        \bibliography{includes/references}  % 参考文献文件
    \fi
}
